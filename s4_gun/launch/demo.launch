<?xml version="1.0"?>
<launch>
    <arg name="model" default="$(find s4_gun)/urdf/world.urdf.xacro"/>
    <arg name="gui" default="true" />
    <arg name="robot" default="sim"/>
    <arg name="robot_name" default="robot0"/>
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />
    <param name="use_gui" value="$(arg gui)"/>

    <group ns="share">
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />  
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find s4_gun)/config/SETTING.rviz" required="true" />
        <node name="joy_node"  pkg="joy" type="joy_node" />
    </group>

    <group ns="$(arg robot_name)">
        <group ns="gun0">
            <node name="s4_gun_demo" pkg="s4_gun" type="s4_gun_demo" >
                <remap from="joy"  to="/share/joy"/>
            </node>
            <include file="$(find s4_gun)/launch/main.launch" >
                <arg name="robot" value="$(arg robot)"/>
            </include>
        </group>
        <group ns="comport0">
            <include file="$(find s4_comport)/launch/main.launch" >
                <arg name="robot" value="$(arg robot)"/>
            </include>
        </group>
    </group>
</launch>

